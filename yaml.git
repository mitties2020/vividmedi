version: "1"
services:
- type: web
  name: vividmedi
  runtime: static
  repo: https://github.com/mitties2020/vividmedi
  staticPublishPath: ./
  domains:
    - vividmedi.com
    - www.vividmedi.com
  routes:
    - type: redirect
      source: /*
      destination: https://vividmedi.com/:splat
  autoDeployTrigger: commit
  previews:
    generation: automatic
